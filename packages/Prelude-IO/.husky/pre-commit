#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

npm test -- --coverage
./node_modules/.bin/eslint --max-warnings 0 ./src && echo "Linting passed"
./node_modules/.bin/tsc --noEmit && echo "Compilation passed"
./node_modules/.bin/typedoc --validation --treatWarningsAsErrors --emit none && echo "Documentation passed"
